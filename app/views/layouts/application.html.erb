<!DOCTYPE html>
<html>
  <head>
    <title>Comercio</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Início", root_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Usuários",  users_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Clientes", clients_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Produtos",  products_path, class: "nav-link" %>
            </li>
            <% if user_signed_in? %>
                <li class="nav-item">
                    <%= link_to("Sair", destroy_user_session_path, method: :delete, class: "nav-link")%>
                </li>
            <% else %>
                <li class="nav-item">
                    <%= link_to "Entrar", new_user_session_path, class: "nav-link"%>
                </li>
            <% end %>
          </ul>
      </div>
    </nav>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

    <%= yield %>

  </body>
</html>
