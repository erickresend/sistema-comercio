<div class="container d-flex justify-content-center">
  <div class="mt-3 mb-3 p-3 card shadow">
  <h2 class="card-title">Fazer login</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field px-1 py-2">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field px-1 py-2">
      <%= f.label t(:password), class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field px-1 py-2">
        <%= f.check_box :remember_me %>
        <%= f.label t(:remember_me) %>
      </div>
    <% end %>

    <div class="actions px-1 py-2">
      <%= f.submit "Entrar", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>  