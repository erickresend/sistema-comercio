<p style="color: green"><%= notice %></p>


<div class="container mt-3 mb-4" id="clients">

  <div>
    <%= form_tag(clients_path, method: :get) do %>
      <%= text_field_tag 'search', nil, placeholder: 'Digite o nome do cliente', class: "form-control w-25" %>
      <%= submit_tag "Pesquisar", class: "btn btn-primary mt-2" %>
    <% end %>
  </div>

  <div class="mt-3 mb-3 p-3 card shadow">
    <h1 class="text-center">CLIENTES</h1>
    <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="table-primary">Nome</th>
          <th class="table-primary">Email</th>
          <th class="table-primary">Telefone</th>
          <th class="table-primary">Endere√ßo</th>
          <th class="table-primary"></th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
        <tr>
          <td> <%= client.name %> </td>
          <td> <%= client.email %> </td>
          <td> <%= client.phone %> </td>
          <td> <%= client.address %> </td>
          <td class="pe-0">
            <div class="d-flex justify-content-end">
              <%= button_to "Editar", edit_client_path(client), method: :get, class: "btn btn-sm btn-primary d-inline-block me-2" %>
              <%= button_to "Deletar", client_path(client.id), method: :delete, class: "btn btn-sm btn-danger d-inline-block" %>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <%= button_to "Novo cliente", new_client_path, method: :get, class: "btn btn-primary mb-3"%>
    <% if !params[:search] %>
      <%= paginate @clients %>
    <% end %>
  </div>
</div>