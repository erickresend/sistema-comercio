<div class="container">
  <%= form_with(model: client) do |form| %>

  <% if client.errors.any? %>
    <div class="alert alert-danger">
      <h2> <%= pluralize(client.errors.count, "Erro") %> </h2>
      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <form>
      <div class="py-1">
        <%= form.label t(:name), class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="py-1 row">
        <div class="col">
          <%= form.label t(:email), class: "form-label" %>
          <%= form.text_field :email, class: "form-control" %>
        </div>

        <div class="col">
          <%= form.label t(:phone), class: "form-label" %>
          <%= form.text_field :phone, class: "form-control" %>
        </div>
      </div>

      <div class="py-1">
          <%= form.label t(:address), class: "form-label" %>
          <%= form.text_area :address, class: "form-control" %>
        </div>

      <div class="py-2">
        <% if client.id %>
          <%= form.submit "Editar", class: "btn btn-primary" %>
        <% else %>
          <%= form.submit "Cadastrar", class: "btn btn-primary" %>
        <% end %>
      </div>
    </form>
  <% end %>
</div>
